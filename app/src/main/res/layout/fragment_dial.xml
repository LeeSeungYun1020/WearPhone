<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="8dp">

    <RelativeLayout
        android:id="@+id/dial_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp">

        <ImageView
            android:id="@+id/dial_call_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="4dp"
            android:contentDescription="@string/call"
            android:src="@drawable/ic_call_white_24dp"
            />

        <TextView
            android:id="@+id/dial_phone_number_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/dial_backspace_icon"
            android:layout_toEndOf="@+id/dial_call_icon"
            android:textAlignment="center" />

        <ImageView
            android:id="@+id/dial_backspace_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="4dp"
            android:contentDescription="@string/backspace"
            android:src="@drawable/ic_backspace_white_24dp" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/dial_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="1"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/dial_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="2"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/dial_3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="3"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/dial_4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="4"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/dial_5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="5"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/dial_6"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="6"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/dial_7"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="7"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/dial_8"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="8"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/dial_9"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="9"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/dial_star"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="*"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/dial_0"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="0"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/dial_hash"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="#"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:layout_weight="1" />
    </LinearLayout>
</LinearLayout>
