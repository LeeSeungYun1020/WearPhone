<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    tools:deviceIds="wear"
    android:layout_margin="8dp">

    <RelativeLayout
        android:id="@+id/dial_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/dial_call_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="4dp"
            android:contentDescription="@string/dial"
            android:src="@drawable/ic_call_white_24dp" />

        <TextView
            android:id="@+id/dial_phone_number_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/dial_backspace_icon"
            android:layout_toEndOf="@+id/dial_call_icon"
            android:textAlignment="center" />

        <ImageView
            android:id="@+id/dial_backspace_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="4dp"
            android:contentDescription="@string/backspace"
            android:src="@drawable/ic_backspace_white_24dp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/dial_1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:text="1"
        android:textAlignment="center"
        android:textSize="22sp"
        app:layout_constraintBottom_toTopOf="@+id/dial_4"
        app:layout_constraintEnd_toStartOf="@id/dial_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dial_box" />

    <TextView
        android:id="@+id/dial_2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:text="2"
        android:textAlignment="center"
        android:textSize="22sp"
        app:layout_constraintBottom_toTopOf="@+id/dial_5"
        app:layout_constraintEnd_toStartOf="@id/dial_3"
        app:layout_constraintStart_toEndOf="@id/dial_1"
        app:layout_constraintTop_toBottomOf="@id/dial_box" />

    <TextView
        android:id="@+id/dial_3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:text="3"
        android:textAlignment="center"
        android:textSize="22sp"
        app:layout_constraintBottom_toTopOf="@+id/dial_6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/dial_2"
        app:layout_constraintTop_toBottomOf="@id/dial_box" />

    <TextView
        android:id="@+id/dial_4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="4"
        android:textAlignment="center"
        android:textSize="22sp"
        app:layout_constraintBottom_toTopOf="@+id/dial_7"
        app:layout_constraintEnd_toStartOf="@+id/dial_5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dial_1" />

    <TextView
        android:id="@+id/dial_5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="5"
        android:textAlignment="center"
        android:textSize="22sp"
        app:layout_constraintBottom_toTopOf="@+id/dial_8"
        app:layout_constraintEnd_toStartOf="@+id/dial_6"
        app:layout_constraintStart_toEndOf="@+id/dial_4"
        app:layout_constraintTop_toBottomOf="@+id/dial_2" />

    <TextView
        android:id="@+id/dial_6"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="6"
        android:textAlignment="center"
        android:textSize="22sp"
        app:layout_constraintBottom_toTopOf="@+id/dial_9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/dial_5"
        app:layout_constraintTop_toBottomOf="@+id/dial_3" />

    <TextView
        android:id="@+id/dial_7"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="7"
        android:textAlignment="center"
        android:textSize="22sp"
        app:layout_constraintBottom_toTopOf="@+id/dial_star"
        app:layout_constraintEnd_toStartOf="@+id/dial_8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dial_4" />

    <TextView
        android:id="@+id/dial_8"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="8"
        android:textAlignment="center"
        android:textSize="22sp"
        app:layout_constraintBottom_toTopOf="@+id/dial_0"
        app:layout_constraintEnd_toStartOf="@+id/dial_9"
        app:layout_constraintStart_toEndOf="@+id/dial_7"
        app:layout_constraintTop_toBottomOf="@+id/dial_5" />

    <TextView
        android:id="@+id/dial_9"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="9"
        android:textAlignment="center"
        android:textSize="22sp"
        app:layout_constraintBottom_toTopOf="@+id/dial_hash"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/dial_8"
        app:layout_constraintTop_toBottomOf="@+id/dial_6" />

    <TextView
        android:id="@+id/dial_star"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="*"
        android:textAlignment="center"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/dial_0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dial_7" />

    <TextView
        android:id="@+id/dial_0"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="0"
        android:textAlignment="center"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/dial_hash"
        app:layout_constraintStart_toEndOf="@id/dial_star"
        app:layout_constraintTop_toBottomOf="@+id/dial_8" />

    <TextView
        android:id="@+id/dial_hash"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="#"
        android:textAlignment="center"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/dial_0"
        app:layout_constraintTop_toBottomOf="@+id/dial_9" />
</androidx.constraintlayout.widget.ConstraintLayout>

