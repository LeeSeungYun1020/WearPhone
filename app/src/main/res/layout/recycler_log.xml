<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    tools:deviceIds="wear">

    <ImageView
        android:id="@+id/recycler_log_image"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginStart="4dp"
        android:contentDescription="@string/personImage"
        android:src="@drawable/ic_person_white_24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/recycler_log_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:hint="name"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@id/recycler_log_image"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/recycler_log_status_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:hint="오후 11:45"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@id/recycler_log_image"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/recycler_log_name" />

    <ImageView
        android:id="@+id/recycler_log_status_image"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_marginEnd="4dp"
        android:src="@drawable/ic_phone_log_24px"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/recycler_log_number"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="010-0000-0000"
        android:textSize="8sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/recycler_log_status_image" />


</androidx.constraintlayout.widget.ConstraintLayout>